# ========================================
# RAÍZEL ECOSISTEMA - VARIABLES DE ENTORNO
# Incluye: Raízel Alimentos + ManadaBook Red Social
# ========================================

# DEPLOYMENT CONFIGURATION
NODE_ENV=development

# ========================================
# VERCEL FRONTEND DEPLOYMENT
# ========================================
# Frontend (Next.js) se despliega en Vercel
# Backend (NestJS) se mantiene en servidor propio

# API Backend URL (cambiar según environment)
NEXT_PUBLIC_API_URL=http://localhost:3001
# NEXT_PUBLIC_API_URL=https://api.manadabook.com  # Para producción

# WebSocket URL para tiempo real
NEXT_PUBLIC_WS_URL=ws://localhost:3001
# NEXT_PUBLIC_WS_URL=wss://api.manadabook.com     # Para producción

# Storage público
NEXT_PUBLIC_MINIO_ENDPOINT=http://localhost:9000
# NEXT_PUBLIC_MINIO_ENDPOINT=https://storage.manadabook.com  # Para producción

# ========================================
# BASE DE DATOS (PostgreSQL)
# ========================================
DATABASE_URL=postgresql://manadabook_user:manadabook_password@localhost:5432/manadabook

# ========================================
# REDIS (CACHE Y SESIONES)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# FIREBASE CONFIGURATION (RAÍZEL + MANADABOOK)
# ========================================
# Client-side (públicas)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=raizel-ecosystem.firebaseapp.com  
NEXT_PUBLIC_FIREBASE_PROJECT_ID=raizel-ecosystem
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=raizel-ecosystem.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Server-side (privadas)
FIREBASE_PROJECT_ID=raizel-ecosystem
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@raizel-ecosystem.iam.gserviceaccount.com

# ========================================
# STRIPE PAYMENT PROCESSING
# ========================================
# Claves para Marketplace + checkout
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# JWT AUTHENTICATION (complementa Firebase)
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-xxxxxxxxxxxxx
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-xxxxxxxxxxxxx
REFRESH_TOKEN_EXPIRES_IN=30d

# ========================================
# VERCEL DEPLOYMENT SECRETS
# ========================================
# Para configurar en Vercel Dashboard:
# VERCEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# VERCEL_ORG_ID=team_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx  
# VERCEL_PROJECT_ID=prj_qJDrQV0qZzT8mfZQt9DKZtsmPamC

# ========================================
# WORKERS Y JOBS
# ========================================
# Token para cleanup jobs automáticos
WORKER_SECRET_TOKEN=worker-secret-123-change-in-production

# ========================================
# ALMACENAMIENTO (MINIO/S3)
# ========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=manadabook-media
MINIO_REGION=us-east-1

# Para producción con AWS S3:
# S3_BUCKET=manadabook-media
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ========================================
# AUTENTICACIÓN
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# ========================================
# STRIPE (PAGOS)
# ========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ========================================
# FRONTEND (NEXT.JS)
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_MINIO_ENDPOINT=http://localhost:9000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# SERVICIOS EXTERNOS
# ========================================

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@manadabook.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ========================================
# MODERACIÓN Y SEGURIDAD
# ========================================
# Google Cloud Vision API (moderación de imágenes)
GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# ANALYTICS
# ========================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Segment
SEGMENT_WRITE_KEY=your_segment_write_key

# ========================================
# DESARROLLO
# ========================================
# Logs
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000

# ========================================
# PRODUCCIÓN
# ========================================
# CDN
CDN_URL=https://cdn.manadabook.com

# SSL
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# ========================================
# MONITOREO
# ========================================
# Sentry
SENTRY_DSN=your_sentry_dsn

# Datadog
DD_API_KEY=your_datadog_api_key
DD_APP_KEY=your_datadog_app_key
